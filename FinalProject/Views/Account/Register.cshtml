@model FinalProject.Models.RegisterModel

<h4 style="font-family: Verdana, Times, serif; color: #5C5A5A; margin-left: 1em;">Добавление нового пользователя</h4> <br/>
<form asp-action="Register" asp-controller="Account" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="col-sm-3">
            <label>Укажите должность врача: </label>
        <select class="form-control selectpicker" asp-for="RoleId" asp-items="Model.Roles">  </select>
        </div><br/>
        <div class="col-sm-3">
            <label asp-for="PhoneNumber">Введите логин: </label>
            <input type="text" class="form-control" asp-for="PhoneNumber"/>
            <span asp-validation-for="PhoneNumber" />
        </div>
        <div class="col-sm-3">
            <label asp-for="Password">Введите пароль: </label>
            <input type="password"  class="form-control" asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div class="col-sm-3">
            <label asp-for="ConfirmPassword">Повторите пароль: </label>
            <input type="password" class="form-control" asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"/>
        </div><br />
                </div>
        <div class="btn-margin">
            <input type="submit" asp-route-id="@ViewBag.Id" onclick="location.href='~/Account/FillDoctorInfo?id=@ViewBag.Id' ;" class="btn btn-light" style="margin-left: 1em;" value="Отправить"/><a/>
            <input style="margin-left: 1em;" class="btn btn-light" type="reset" value="Очистить" />
        </div>

</form>