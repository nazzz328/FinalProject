@model FinalProject.Models.RegisterModel

<h2>Добавление нового врача</h2>
<form asp-action="Register" asp-controller="Account" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Введите логин: </label>
            <input type="text" asp-for="PhoneNumber"/>
            <span asp-validation-for="PhoneNumber" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль: </label>
            <input type="text" asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Повторите пароль: </label>
            <input type="text" asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-btn-outline-dark" />
        </div>
      </div>
</form>